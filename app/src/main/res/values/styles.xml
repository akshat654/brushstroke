<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.GoogleButton">
        <item name="android:drawableLeft">@drawable/logo_googleg_color_18dp</item>
        <item name="android:background">@drawable/idp_button_background_google</item>
        <item name="android:textColor">#5BD2DC</item>
    </style>

    <style name="AppTheme.FacebookButton">
        <item name="android:drawableLeft">@drawable/com_facebook_button_icon_white</item>
        <item name="android:background">@drawable/idp_button_background_facebook</item>
        <item name="android:textColor">#3b5998</item>
    </style>
    <style name="AppTheme.VisibilityToggle">
        <item name="android:tint">@color/black</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:src">@drawable/ic_visibility_black_24dp</item>
    </style>
    <style name="AppTheme.WrapperStyle">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
    </style>
    <style name="AppTheme.Text.TextInputLayout">
        <item name="android:paddingTop">8dp</item>
        <item name="android:textColorHint">@color/black</item>
    </style>
    <style name="AppTheme.Text">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
</style>
    <style name="AppTheme.Text.T12">
        <item name="android:textSize">12sp</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

    <style name="AppTheme.Text.HintText" parent="AppTheme.Text.T12">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AppTheme.Text.ErrorText" parent="AppTheme.Text.T12">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>
    <style name="AppTheme.EditText2">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:colorActivatedHighlight">#8C8989</item>
        <item name="android:colorFocusedHighlight">#8C8989</item>
    </style>

    <style name="AppTheme.EditText2.PasswordField">
        <item name="android:hint">@string/password_hint</item>
        <item name="android:inputType">textPassword</item>
    </style>

</resources>
